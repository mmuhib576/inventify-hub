<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".UpdateProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_below="@+id/header_title"
                android:text="Update Product"
                android:gravity="center"
                android:id="@+id/subtitle"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/editProductName"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name" />

            <EditText
                android:id="@+id/editProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editProductName"
                android:layout_marginTop="8dp"
                android:inputType="numberDecimal"
                android:hint="Product Price" />

            <EditText
                android:id="@+id/editProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editProductPrice"
                android:layout_marginTop="8dp"
                android:hint="Product Description" />

            <EditText
                android:id="@+id/editProductQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editProductDescription"
                android:layout_marginTop="8dp"
                android:inputType="number"
                android:hint="Product Quantity" />

            <Button
                android:id="@+id/addProductButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editProductQuantity"
                android:layout_marginTop="16dp"
                android:background="#212121"
                android:text="Update"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/deleteProductButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addProductButton"
                android:layout_marginTop="16dp"
                android:background="#FF0000"
                android:text="Delete"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>